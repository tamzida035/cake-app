extends layout

block content
  // carousel
  section(id="center" class="center_home")
    div(id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel")
      div(class="carousel-inner")
        //1st carousel item
        div(class="carousel-item")
          img(src="/images/1.jpg" class="d-block img-fluid" alt="...")
          div(class="carousel-caption d-md-block text-start")
            h5(class="text-uppercase") Latest Recipe 
            h1(class="mt-3 mb-3") Flat Irons,
              span(class="col_green") Skillet
            ul(class="mb-0 mt-4")
              li(class="d-inline-block me-2")
                a(class="button" href="#") View more
                  i(class="fa fa-long-arrow-right ms-2")
        //2nd carousel item
        div(class="carousel-item active")
          img(src="/images/2.jpg" class="d-block img-fluid" alt="...")
          div(class="carousel-caption d-md-block text-start")
            h5(class="text-uppercase col_light") Latest Recipe
            h1(class="mt-3 mb-3") Cheesecake,
              span(class="col_green") New York
            ul(class="mb-0 mt-4")
              li(class="d-inline-block me-2")
                a(class="button" href="#") View more
                  i(class="fa fa-long-arrow-right ms-2")
        //3rd carousel item
        div(class="carousel-item")
          img(src="/images/3.jpg" class="d-block img-fluid" alt="...")
          div(class="carousel-caption d-md-block text-start")
            h5(class="text-uppercase col_light") Latest Recipe
            h1(class="mt-3 mb-3") red
              span(class="col_green") velvet
            ul(class="mb-0 mt-4")
              li(class="d-inline-block me-2")
                a(class="button" href="#") View more
                  i(class="fa fa-long-arrow-right ms-2")
      // buttons to change carousel item
      button(class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev")
        span(class="carousel-control-prev-icon" aria-hidden="true")
        span(class="visually-hidden") Previous
      button(class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next")
        span(class="carousel-control-next-icon" aria-hidden="true")
        span(class="visually-hidden") Next
  //<!--my recipes (this code is only for logged in user)-->
  section(id="logged_user" class="pt-5 pb-5")
    div(class="container-xl")
      div(class="row popular_1 text-center mb-4")
        div(class="col-md-12")
          h1 My Publications
      div(class="row row-cols-1 row-cols-md-2 popular_2")
        // PUBLIC recipe (if any by logged in user)
        div(class="col p-0")
          div(class="popular_2_left position-relative")
            div(class="popular_2_left1")
              a(href="#")
                img(src="/images/9.jpg" class="img-fluid" alt="abc")
            div(class="popular_2_left2 position-absolute bg_back w-100 h-100 top-0 px-4")
              h2
                a(class="text-white link" href="#") Almond Pastry Cookies
              span(class="text-white font_12") PUBLIC
        // PERSONAL recipe (if any by logged in user)
        div(class="col p-0")
          div(class="popular_2_left position-relative")
            div(class="popular_2_left1")
              a(href="#")
                img(src="/images/10.jpg" class="img-fluid" alt="abc")
            div(class="popular_2_left2 position-absolute bg_back w-100 h-100 top-0 px-4")
              h2
                a(class="text-white link" href="#") Oreo Cake
              span(class="text-white font_12") PERSONAL

  // for all users, add button 'add recipe by voice', 'add recipe by text'
  section(id="add_recipe" class="center_home")
    div(id="carouselExampleCaptions2" class="carousel slide" data-bs-ride="carousel")
      div(class="carousel-inner")
        //only carousel item
        div(class="carousel-item active")
          img(src="/images/1.jpg" class="d-block img-fluid" alt="...")
          div(class="carousel-caption d-none d-md-block")
            h5(class="text-uppercase") Add new Recipe 
            ul(class="mb-0 mt-4")
              li(class="d-inline-block me-2")
                a(class="button" href="#") Voice
                  i(class="fa fa-long-arrow-right ms-2")
              li(class="d-inline-block me-2")
                a(class="button" href="#") Text
                  i(class="fa fa-long-arrow-right ms-2")



  //<!--footer-->
  section(id="footer" class="pt-5 pb-5 bg-black")
    div(class="container-xl")
      div(class="row footer_2 mt-4 text-center")
        div(class="col-md-12")
          ul
            li(class="d-inline-block me-3 font_14")
              a(class="text-white-50 link" href="/admin/login") ADMIN ACCESS
          p(class="mb-0 text-white-50") @ 2025 Delicious Recipes. All Rights Reserved | Design by 
            a(class="col_green" href="http://www.templateonweb.com") TemplateOnWeb




  // h1= title
  // p Welcome to #{title}
  //a(href='/admin/login') admin access
  script(src="/javascripts/bootstrap.bundle.min.js")
  script(src="/javascripts/theme.min.js")
