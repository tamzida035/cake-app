              img.ms-auto(src="..public/images/icons-svg/x.svg", width="40", height="40", data-bs-dismiss="offcanvas", aria-label="Close", alt="Close TemplateOnweb website menu")
            .offcanvas-body.pt-0.align-items-center
              ul.navbar-nav.align-items-lg-center.ms-auto
                // may replece it with recipe button (not sure)
                li.nav-item
