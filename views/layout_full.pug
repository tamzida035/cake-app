                li(class="nav-item dropdown drop_border")
                  a#navbarDropdown.nav-link.dropdown-toggle(href="#", role="button", data-bs-toggle="dropdown", aria-expanded="false")
                    | Recipes
                    img(src="../public/images/icons-svg/chevron-down.svg", width="15", height="15", alt="Submenu open/close icon")
                  ul(class="dropdown-menu drop_1 shadow", aria-labelledby="navbarDropdown")
                    li
                      a.dropdown-item(href="recipe.html")  All Recipes
                    li
                      a.dropdown-item.border-0(href="recipe_detail.html")  My personal recipes
                    // add another item on this dropdown menu -my public recipes
              ul(class="navbar-nav align-items-lg-center ms-auto nav_right")
                li.nav-item.dropdown
                  a#navbarDropdown(class="dropdown-toggle nav_hide nav-link fs-5", href="#", role="button", data-bs-toggle="dropdown", aria-expanded="false")
                    i.bi.bi-search
                  ul(class="dropdown-menu drop_search p-3 shadow", aria-labelledby="navbarDropdown", style=)
                    form.navbar-form(role="search")
                      .input-group
                        input.form-control(type="text", placeholder="Search Keyword")
                        span.input-group-btn
                          button(class="btn btn-primary bg_red border-0 rounded-0 p-2 px-3", type="button")
                            i.bi.bi-search
                li.nav-item.dropdown
                  // replace shopping  cart sign with 'my account' sign. clicking on it will logout user. display text 'logout'
                  a#navbarDropdown(class="nav-link dropdown-toggle drop_togn nav_hide fs-5", href="#", role="button", data-bs-toggle="dropdown", aria-expanded="false")
                    i.bi.bi-cart
